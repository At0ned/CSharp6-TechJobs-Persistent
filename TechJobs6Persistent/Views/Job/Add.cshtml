@using TechJobs6Persistent.ViewModels;
@model AddJobViewModel;


<h1>Add Job</h1>

<form asp-controller="Job" asp-action="Add" method="post">
    <div class="form-group">
        <label>Job Title: @Model.JobName</label>
        <input class="form-control" />
        <span></span>
    </div>
    <br />
     <div class="form-group">
        <label asp-for="EmployerId">Employers: </label>
        <select asp-for="EmployerId" asp-items="Model.Employers"></select>
    </div>
    <br />

    <input type="submit" value="Add Job" />
</form>
<a asp-controller="Employer" asp-action="Create">Add more employers</a>
